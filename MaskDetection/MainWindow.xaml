<Window x:Class="MaskDetection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaskDetection"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.1*" />
			<RowDefinition Height="0.9*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.5*" />
				<ColumnDefinition Width="0.5*" />
				<ColumnDefinition Width="0.5*" />
			</Grid.ColumnDefinitions>
			<Button x:Name="button_cam" Grid.Column="0" Content="Camera Open" Click="Btn_Click" FontSize="20"/>
			<Button x:Name="button_image" Grid.Column="1" Content="Image Load" Click="Btn_Click" FontSize="20"/>
			<Button x:Name="button_model" Grid.Column="2" Content="Model Load" Click="Btn_Click" FontSize="20"/>

		</Grid>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.6*" />
				<ColumnDefinition Width="0.4*" />
			</Grid.ColumnDefinitions>
			<Image x:Name="image_cam" Grid.Column="0" Stretch="Uniform"/>
			<Grid Grid.Column="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="0.1*" />
					<RowDefinition Height="0.1*" />
					<RowDefinition Height="0.1*" />
					<RowDefinition Height="0.1*" />
					<RowDefinition Height="0.1*" />
					<RowDefinition Height="0.5*" />
				</Grid.RowDefinitions>
				<CheckBox x:Name="check_facecog" Grid.Row="0" Content="Auto Face-Cognition" VerticalAlignment="Center" Margin="10" Click="Btn_Click"/>

				<Grid Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="0.4*" />
						<ColumnDefinition Width="0.6*" />
					</Grid.ColumnDefinitions>

					<TextBlock x:Name="text_face_conf" Grid.Column="0" TextWrapping="Wrap" VerticalAlignment="Center" Text="Face Confidence" Margin="10"/>
					<Slider x:Name="slider_face_conf" Grid.Column="1" Width="120" Minimum="0" Maximum="100" VerticalAlignment="Center" ValueChanged="ValueChanged" />
				</Grid>

				<CheckBox x:Name="check_fullsize" Grid.Row="2" Content="Full Size" VerticalAlignment="Center" Margin="10" Click="Btn_Click"/>
				<TextBlock x:Name="text_model" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10" Text="" FontSize="10"/>
				<TextBlock x:Name="text_result" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10" Text="" FontSize="22"/>

			</Grid>
		</Grid>
	</Grid>
</Window>
